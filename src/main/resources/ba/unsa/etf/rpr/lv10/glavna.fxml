<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<HBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ba.unsa.etf.rpr.lv10.GlavnaController">
   <children>
    <TableView fx:id="tableViewGradovi" prefHeight="400.0" prefWidth="449.0">
      <columns>
        <TableColumn fx:id="colGradId" prefWidth="60.0" text="ID" />
        <TableColumn fx:id="colGradNaziv" prefWidth="100.0" text="Naziv" />
        <TableColumn fx:id="colGradStanovnika" prefWidth="100.0" text="Stanovnika" />
        <TableColumn fx:id="colGradDrzava" prefWidth="190.0" text="Država" />
      </columns>
    </TableView>
    <VBox alignment="TOP_CENTER" prefHeight="400.0" prefWidth="152.0" spacing="10.0">
      <Button fx:id="btnDodajGrad" mnemonicParsing="false" prefHeight="30.0" prefWidth="100.0" text="Dodaj grad" />
      <Button fx:id="btnDodajDrzavu" mnemonicParsing="false" prefHeight="30.0" prefWidth="100.0" text="Dodaj državu" />
      <Button fx:id="btnIzmijeniGrad" mnemonicParsing="false" prefHeight="30.0" prefWidth="100.0" text="Izmijeni grad" />
      <Button fx:id="btnObrisiGrad" mnemonicParsing="false" prefHeight="30.0" prefWidth="100.0" text="Obriši grad" />
         <HBox.margin>
            <Insets right="1.0" />
         </HBox.margin>
         <padding>
            <Insets top="10.0" />
         </padding>
    </VBox>
   </children>
</HBox>
